<ns0:RootFileSystem xmlns:ns0="https://www.linutronix.de/projects/Elbe" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" created="2009-05-20T08:50:56" revision="6" xsi:schemaLocation="https://www.linutronix.de/projects/Elbe dbsfed.xsd">
	<project>
		<name>AARCH64 guest sample for jailhouse</name>
		<version>2.0</version>
		<description>
			ARM64 guest sample for jailhouse
		</description>
		<buildtype>aarch64</buildtype>
		<mirror>
			<primary_host>ftp.de.debian.org</primary_host>
			<primary_path>/debian</primary_path>
			<primary_proto>http</primary_proto>
		</mirror>
		<suite>buster</suite>
	</project>
	<target>
		<hostname>guest</hostname>
		<domain>informatik.uni-tuebingen.de</domain>
		<passwd>es</passwd>
		<console>ttyS0,115200</console>
		<package>
			<cpio><name>arm64-guest.cpio</name></cpio>
		</package>
		<fstab>
			<bydev>
				<source>none</source>
				<mountpoint>/proc</mountpoint>
				<fs>
					<type>proc</type>
				</fs>
			</bydev>
			<bydev>
				<source>none</source>
				<mountpoint>/sys</mountpoint>
				<fs>
					<type>sysfs</type>
				</fs>
			</bydev>
			<bydev>
				<source>none</source>
				<mountpoint>/dev</mountpoint>
				<fs>
					<type>devtmpfs</type>
				</fs>
			</bydev>
			<bydev>
				<source>none</source>
				<mountpoint>/sys/kernel/debug</mountpoint>
				<fs>
					<type>debugfs</type>
				</fs>
			</bydev>
		</fstab>
		<install-recommends />
		<finetuning>
			<!-- Create missing directories -->
			<mkdir>/dev</mkdir>
			<mkdir>/bin</mkdir>
			<mkdir>/sbin</mkdir>
			<mkdir>/usr/bin</mkdir>
			<mkdir>/usr/sbin</mkdir>
			<mkdir>/etc/init.d</mkdir>
			<ln path="/sbin/init">/init</ln>
			<!-- minimum dvice nodes (fallback) -->
			<!--<mknod opts="c 5 0">/dev/tty</mknod>-->
			<!--<mknod opts="c 5 1">/dev/console</mknod>-->
			<!--<mknod opts="c 1 3">/dev/null</mknod>-->
			<!-- Add start script (may be moved to archive) -->
			<file dst="/etc/init.d/rcS" mode="755">
				#!/bin/sh
				mount -a
			</file>
		</finetuning>
		<pkg-list>
			<pkg>busybox-static</pkg>
		</pkg-list>
	</target>
</ns0:RootFileSystem>
